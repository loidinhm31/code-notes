{
  "name": "code-notes-monorepo",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev:tauri": "turbo run dev --filter=@code-notes/tauri",
    "dev:web": "turbo run dev --filter=@code-notes/web",
    "build": "turbo run build",
    "build:tauri": "turbo run build --filter=@code-notes/tauri",
    "build:web": "turbo run build --filter=@code-notes/web",
    "lint": "turbo run lint",
    "clean": "turbo run clean",
    "format": "prettier --write \"**/*.{ts,tsx,md,json}\""
  },
  "devDependencies": {
    "turbo": "^2.3.3",
    "prettier": "^3.2.5",
    "typescript": "^5.8.3"
  },
  "packageManager": "pnpm@9.1.0"
}